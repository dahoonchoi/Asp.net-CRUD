
@{
    ViewData["Title"] = "PutTest";
}

<div class="container">
    <form class="form-signin" method="POST" asp-action="EditTest" asp-controller="Test">

        <p>Title</p>
        <input type="text" id="title" name="title" class="form-control" value="@ViewBag.model.title.Trim()"><br>
        <p>Content</p>
        <input type="text" id="contents" name="contents" class="form-control" value="@ViewBag.model.contents.Trim()"><br>
        <p>Date</p>
        <input type="text" id="date" name="date" class="form-control" value="@System.DateTime.Now.ToString("HH:mm:ss")" /><br />
        <button id="btn-Yes" class="btn btn-lg btn-primary btn-block" type="submit">수정</button>
        <input type="text" style="display:none" id="no" name="no" class="form-control" value="@ViewBag.model.no"><br>

    </form>

</div>


